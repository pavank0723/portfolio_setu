{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Portfolio Setu",
        "description": "This is <b>Pavan's</b> Portfolio api using NodeJS."
    },
    "host": "localhost:5100",
    "basePath": "/",
    "tags": [
        {
            "name": "Auth",
            "description": "All the autherization method"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "securityDefinitions": {
        "Authorization": {
            "type": "apiKey",
            "name": "Authorization",
            "description": "Value: Bearer ",
            "in": "header",
            "scheme": "bearer"
        }
    },
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "JWT": {
        "type": "apiKey",
        "name": "token",
        "in": "header"
    },
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Login and get the token",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/LoginModel"
                        }
                    }
                ],
                "responses": {}
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Register user",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/RegisterModel"
                        }
                    }
                ],
                "responses": {
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ]
            }
        },
        "/auth/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "description": "Get the user required details",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ]
            }
        },
        "/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Refresh token and access token generated",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/TokenModel"
                        }
                    }
                ],
                "responses": {}
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Logout the user token i.e. delete the token",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/TokenModel"
                        }
                    }
                ],
                "responses": {}
            }
        }
    },  
    "definitions": {
        "LoginModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "john@mail.com"
                },
                "password": {
                    "type": "string",
                    "example": "john123"
                }
            },
            "required": [
                "email",
                "password"
            ]
        },
        "RegisterModel": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "John Snow"
                },
                "email": {
                    "type": "string",
                    "example": "mail@mail.com"
                },
                "password": {
                    "type": "string",
                    "example": "john123"
                },
                "confirm_password": {
                    "type": "string",
                    "example": "john123"
                }
            },
            "required": [
                "name",
                "email",
                "password"
            ]
        },
        "TokenModel": {
            "type": "object",
            "properties": {
                "refresh_token": {
                    "type": "string",
                    "example": "john@mail.com"
                }
            },
            "required": [
                "refresh_token"
            ]
        }
    }
}